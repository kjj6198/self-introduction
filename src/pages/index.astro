		content: "js";
	}

	&[data-language="golang"]:before {
		content: "go";
	}

	&:before {
		font-family: Menlo, Manaco;
		font-size: 14px;
		padding: 4px;
		background-color: #f7df1e;
		font-weight: bold;
		content: attr(data-language);
		position: absolute;
		top: 10px;
		right: 10px;
		text-transform: uppercase; */
  /* } */

  .weeklyContainer h2,
  .weeklyContainer h3 {
    margin-bottom: 0.75em;
  }

  .weeklyContainer hr {
    border: 2px solid #444;
    margin: 100px auto;
    width: 80px;
  }

  .weeklyContainer h1 {
    border-color: #c5c5c5;
  }

  .weeklyContainer blockquote {
    border-color: #bababa;
    color: var(--color-text-secondary);
  }

  .weeklyContainer figure {
    margin: 2em 0;
  }

  .weeklyContainer figure.full {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .weeklyContainer figure.large {
    margin-left: -10%;
    margin-right: -10%;
  }

  .weeklyContainer figure > figcaption {
    caption-side: bottom;
    font-size: 16px;
    color: #656565;
    text-align: center;
  }

  @media screen and (max-width: 60rem) {
    figure.full {
      position: static;
      width: 100%;
      margin-left: 0;
      margin-right: 0;
    }

    figure.large {
      margin-left: 0;
      margin-right: 0;
    }
  }

  .weeklyContainer thead {
    background-color: #dadada;
  }

  .weeklyContainer tr:nth-child(even) {
    background: #e8e7e7;
  }

  .weeklyContainer a:not(:where([href^="#"], [href*="//blog.kalan.dev"]), [href^="/"]):after
  {
    content: "↗️";
    font-size: 0.6em;
  }
</style>
